script/source = "extends Node2D

export var damage: float = 0.6
export var damage_time: float = 0.33
export var active_time: float = 5

onready var active_timer = $ActiveTimer
onready var damage_timer = $DamageTimer
onready var area = $Area2D
onready var pickup_area = $PickupArea
onready var effect = $AnimatedSprite

func _process(delta):
	if active_timer.time_left > 0:
		if damage_timer.time_left <= 0:
			damage_timer.start(damage_time)
			for body in area.get_overlapping_bodies():
				if body.is_in_group(\"enemy\"):
					if body.has_method(\"take_damage\"):
						body.take_damage(damage)
	else:
		$ActiveSound.stop()
		
	if Input.is_action_just_pressed(\"player_interact\"):
		for b in pickup_area.get_overlapping_bodies():
			if b.is_in_group(\"player\"):
				b.add_coins(b.BUILD_COST)
				queue_free()

	effect.scale = lerp(effect.scale, Vector2.ONE if active_timer.time_left > 0 \\
		else Vector2.ZERO, delta * 8)
	print(\"[AreaDamageTurret]\", active_timer.time_left)


func on_shot():
	print(\"[AreaDamageTurret] activated\")
	active_timer.start(active_time)
	damage_timer.start(damage_time)
	$ActiveSound.play()

